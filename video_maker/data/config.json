{
    "src": {
        "phrase": {
            "url": "https://www.osvigaristas.com.br/frases/motivacao/",
            "pages": {
                "min": 1,
                "max": 25,
                "prefix": "pagina",
                "suffix": ".html"
            },
            "elements": {
                "parentElement": ".col-xs-12",
                "messageElement": "div.quote > q",
                "authorElement": "footer strong"
            }
        },
        "music": {
            "url": "https://www.freemusicarchive.org/genre/Soundtrack",
            "pages": {
                "min": 1,
                "max": 421,
                "prefix": "?sort=track_date_published&d=1&page=",
                "suffix": ""
            },
            "elements": {
                "parentElement": ".play-item",
                "musicElement": ".playicn > a",
                "musicUrlAttribute": "href"
            }
        }
    },
    "phrase": {
        "phraseCount": 15
    },
    "image": {
        "text": {
            "font": "Arial",
            "size": "60",
            "color": "#d76a06"
        },
        "backgroundColor": "#002f5e",
        "wordWrapCharCount": 60
    },
    "video": {
        "filename": "",
        "outputPath": "video_maker/output",
        "openingImage": "data/images/opening.png",
        "endingImage": "data/images/ending.png",
        "slideDuration": "auto",
        "resolution": {
            "width": 1920,
            "height": 1080
        },
        "format": "mp4"
    },
    "dev": {
        "useExec": true
    }
}
